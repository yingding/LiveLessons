<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/TesterTaskTestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="test name"/>

    <TextView
        android:id="@+id/TesterTaskProgressCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/completionTime"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:text="count"/>

    <ProgressBar
        android:id="@+id/TesterTaskProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@id/TesterTaskProgressCount"
        android:indeterminate="false"
        android:max="100" />

    <TextView
        android:id="@+id/completionTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="00:00:00" />
</RelativeLayout>
